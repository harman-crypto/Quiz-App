        "question": "How many hours are there in a day?",
        "type": "text",
        "answer": "24"
    }
]

# ğŸ”€ Shuffle the quiz questions
random.shuffle(quiz)

score = 0

for q in quiz:
    print("\n" + q["question"])

    if q["type"] == "mcq":
        for opt in q["options"]:
            print(opt)
        user_answer = input("Your answer (A/B/C/D): ").strip().upper()
        correct = q["answer"].strip().upper()

    else:  # text question
        user_answer = input("Your answer: ").strip().lower()
        correct = q["answer"].strip().lower()

    if user_answer == correct:
        print("âœ… Correct!")
        score += 1
    else:
        print(f"âŒ Wrong! Correct answer is: {q['answer']}")

# ğŸ¯ Final Score
print(f"\nğŸ¯ Your Final Score: {score}/{len(quiz)}")

if score > 5:
    print("ğŸ‰ You are Passed!")
else:
    print("ğŸ˜ Oops! You are Fail.")
